{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://criteria-set-protocol-schema.openframe.org/criteria-tree/criterion.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "../string.json#uuid"
    },
    "type": {
      "const": "criterion"
    },
    "title": {
      "type": "string"
    },
    "code": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "task-group.json"
      }
    },
    "documentation": {
      "$ref": "../documentation.json"
    },
    "data": {
      "additionalProperties": {
        "type": "string"
      }
    },
    "sortOrder": {
      "type": "number"
    }
  },
  "required": ["id", "type", "title", "items"],
  "additionalProperties": false
}
