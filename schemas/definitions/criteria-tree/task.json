{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://criteria-set-protocol-schema.openframe.org/criteria-tree/task.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "../string.json#uuid"
    },
    "type": {
      "const": "task"
    },
    "title": {
      "type": "string"
    },
    "label": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "task-item.json"
      }
    },
    "itemGroups": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      },
      "minItems": 1
    },
    "documentation": {
      "$ref": "../documentation.json"
    },
    "data": {
      "additionalProperties": {
        "type": "string"
      }
    },
    "sortOrder": {
      "type": "number"
    }
  },
  "required": ["id", "type", "title", "items"],
  "additionalProperties": false
}
