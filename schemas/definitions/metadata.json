{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://criteria-set-protocol-schema.openframe.org/metadata.json",
  "type": "object",
  "properties": {
    "protocol": {
      "type": "integer",
      "multipleOf": 1,
      "exclusiveMinimum": 1
    },
    "metadata": {
      "$ref": "metadata/metadata.json"
    },
    "locales": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "defaultLocale": {
      "type": "string"
    },
    "parameters": {},
    "result": {},
    "definitions": {}
  },
  "required": ["protocol", "metadata"],
  "dependentRequired": {
    "locales": ["defaultLocale"]
  },
  "additionalProperties": false
}
