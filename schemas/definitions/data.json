{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://criteria-set-protocol-schema.openframe.org/data.json",
  "select-single": {
    "type": "object",
    "properties": {
      "type": {
        "const": "select-single"
      },
      "description": {
        "type": "string"
      },
      "options": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/point-option"
        }
      }
    },
    "required": ["type", "options"]
  },
  "select-multiple": {
    "type": "object",
    "properties": {
      "type": {
        "const": "select-multiple"
      },
      "description": {
        "type": "string"
      },
      "options": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/point-option"
        }
      }
    },
    "required": ["type", "options"]
  },
  "number": {
    "type": "object",
    "properties": {
      "type": {
        "const": "number"
      },
      "description": {
        "type": "string"
      },
      "minimum": {
        "type": "number"
      },
      "maximum": {
        "type": "number"
      },
      "step": {
        "type": "number"
      }
    },
    "additionalProperties": false,
    "required": ["type"]
  },
  "boolean": {
    "type": "object",
    "properties": {
      "type": {
        "const": "boolean"
      },
      "description": {
        "type": "string"
      }
    }
  },
  "$defs": {
    "point-option": {
      "type": "object",
      "properties": {
        "id": {
          "$comment": "This ID is for the internal use of the service and is meant to represent uniqueness for different options with the same value, if not provided, the value will be used as the ID",
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "value": {
          "$comment": "This value does not need to be unique, uniqueness is provided by the ID",
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" },
            { "type": "null" }
          ]
        },
        "annotations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "required": ["label", "value"]
    }
  }
}
