{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://criteria-set-protocol-schema.openframe.org/string.json",
  "semver": {
    "type": "string",
    "pattern": "^\\d+\\.\\d+\\.\\d+$"
  },
  "uuid": {
    "$comment": "The documentation states that \"format\" is just an annotation and does not effect validation. For this reason we extend it so as to provide a validation pattern.",
    "type": "string",
    "format": "uuid",
    "pattern": "^[a-fA-F0-9]{8}-[a-fA-F0-9]{4}-4[a-fA-F0-9]{4}-[89abAB][a-fA-F0-9]{4}-[a-fA-F0-9]{12}$"
  },
  "date-time": {
    "type": "string",
    "format": "date-time",
    "pattern": "^(19|2[0-9])[0-9]{2}-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|[1-5][0-9]):(0[0-9]|[1-5][0-9])\\.[0-9]{3}Z$"
  },
  "email": {
    "type": "string",
    "format": "email",
    "pattern": "^[\\w-.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
  }
}
